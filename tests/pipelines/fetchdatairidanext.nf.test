            assert path("$launchDir/results/reads/SRR13191702_1.fastq.gz").md5 == "89c5be920021a035084d8aeb74f32df7"
            assert path("$launchDir/results/reads/SRR13191702_2.fastq.gz").md5 == "56271be38a80db78ef3bdfc5d9909b98"
        }
    }

    test("integration test with failures ENA") {

        when {
            params {
                input = "$baseDir/tests/data/errorsheet.csv"
